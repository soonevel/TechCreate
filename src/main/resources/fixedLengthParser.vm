package org.example

import java.io.File
import java.io.IOException

class FixedLengthParser {
    @Throws(IOException::class)
    fun parseFile(filePath: String): List<Record> {
        val records = mutableListOf<Record>()

        File(filePath).bufferedReader().useLines { lines ->
            lines.forEach { line ->
                if (line.length == $lineEnd) {
                    // Extract fields based on fixed positions
                    #foreach( $col in $cols )
                    val $col.columnName = extractField(line, $col.startIndex, $col.endIndex).trim()
                    #end

                    // Create a new Record object
                    val record = Record(#foreach( $col in $cols )$col.columnName#if( $foreach.hasNext ), #end#end)
                    records.add(record)
                } else {
                    // Handle lines with unexpected length
                    println("Data '$line' is not parsed as it does not follow the schema.")
                }
            }
        }
        return records
    }

    private fun extractField(line: String, start: Int, end: Int): String {
        return line.substring(start - 1, end)
    }
}